@model IEnumerable<XGEAR.Models.Product>

@{
    ViewBag.Title = "Laptop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Laptop</h2>
@foreach (var pro in Model.Where(s=>s.ProductID==1))
{
    
        <div class="">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "Product", new { id = pro.ProductID })">
                <img src="@Url.Content(pro.ImagePro)" alt="Lights" style="width:100%">
                <div class="caption">
                    <p>@pro.NamePro</p>
                    <p>@pro.Price</p>
                    <p>
                        
                        <a href="@Url.Action("AddToCart", "Cart", new { id = pro.ProductID })" class="btn btn-default" role="button">Add to cart</a>
                    </p>
                </div>
                </a>
            </div>
        </div>
    

}

