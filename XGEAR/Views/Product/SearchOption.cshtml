@model IEnumerable<XGEAR.Models.Product>
<div style="margin-top:100px;"></div>
<h2 style="margin-top:180px;">Tìm kiếm</h2>
@using (Html.BeginForm("SearchOption", "Product"))
{
    <text> Giá Từ</text>
    <input type="number" name="min" />
    <text>Đến</text>
    <input type="number" name="max" />
    <input type="submit" value="Search" />
    <div class="container">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3 info-best-seller slide-best-seller">
                    <div class="card-pro laptop-best-seller">
                        @*<p>@Html.DisplayFor(model => pro.ProductID)</p>*@
                        <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                        <p class="text-info">@Html.DisplayFor(model => pro.NamePro)</p>
                        <p class="promotional-price" style="font-size:18px">@Html.DisplayFor(model => pro.Price)</p>
                        <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="btn btn-default"><button class="buy-now">Mua ngay</button></a>
                    </div>
                </div>
            }
        </div>
    </div>
}


